<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>When2Buy</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Stylesheets -->
    <link href="https://fonts.googleapis.com/css?family=Itim|Pacifico" rel="stylesheet">
    <link href="/css/homeListsButton.css" rel="stylesheet">
    <link href="/css/index.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Delius+Unicase|Lobster|Pacifico" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet">

    <!-- FontAwesome -->
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
  	<div id="welcomeTile">
  		<!-- login, edit, and ? buttons -->
      <div class="jumbotron titleWrapper">
        <a href='/login' type="button" class="upperRightButton">
          <i class="fas fa-sign-out-alt fa-flip-horizontal"></i> 
        </a>
        <h1 id="titleText">
        When2Buy</h1>
        <a href='/help' type="button" class="upperLeftButton">
          <i class="fas fa-question-circle"></i> 
        </a>
      </div>
    </div>
    <!--home page lists -->
    <div class="listButton" style="overflow-y: auto;">
        <a href="#" class="btn" id="createNewButton" data-toggle="modal" data-target="#createList"> +Create New </a>
        <!-- List Names -->
        {{#each names}}
        <a href="/list/{{listName}}={{dueDate}}" class="listButton btn"> <div class="listName"> {{listName}} </div> <span class="dueDate"> Due: {{dueDate}} </span> </a>
        {{/each}}
    </div>

    <!-- Create List Modal -->
    <div id = "createList" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content"> 
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"> &times; </button>
            <h4 class="modal-title"> Create New List </h4>
          </div>
          <div class="modal-body">
            <form id="newList" role="form" method="get" action="/list">
              <div class="form-group">
                <label for="listInput"> List Name </label>
                <input type="text" class="form-control" name="listInput" required>
              </div>
              <div class="form-group">
                <label for="dueDate"> Due Date </label>
                <input type="date" name="due" id="dueDate" required>
              </div>
              <input class="btn btn-primary" type="submit">
            </form>
          </div>
          </div>
        </div>
      </div>
    </div>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    <script src="/js/facebook.js"></script>
  </body>
</html>